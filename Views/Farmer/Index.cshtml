@model IEnumerable<PROG7311POE_ST10178800.Models.Product>
@{
    ViewData["Title"] = "All Products";
}

<h1>All Products</h1>

@if (Model.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Date Added</th>
                <th>Farmer ID</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.Name</td>
                    <td>@p.Category</td>
                    <td>@p.DateAdded.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@p.FarmerId</td>
                    <td>
                        <form asp-action="DeleteProduct" asp-controller="Farmer" method="post" asp-route-id="@p.Id" onsubmit="return confirm('Are you sure you want to delete this product?');">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>

            }
        </tbody>
    </table>
}
else
{
    <p>No products found.</p>
}
