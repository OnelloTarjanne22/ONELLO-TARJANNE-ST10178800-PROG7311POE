@model IEnumerable<PROG7311POE_ST10178800.Models.Product>

@{
    ViewData["Title"] = "Farmer Products";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="ViewProducts" asp-controller="Employee" method="get" class="d-flex align-items-end gap-2 mb-3">
    <input type="hidden" name="farmerId" value="@ViewBag.FarmerId" />

    <div>
        <label class="form-label form-label-sm mb-0">Category:</label>
        <input type="text" name="category" class="form-control form-control-sm" />
    </div>

    <div>
        <label class="form-label form-label-sm mb-0">From Date:</label>
        <input type="date" name="fromDate" class="form-control form-control-sm" />
    </div>

    <div>
        <label class="form-label form-label-sm mb-0">To Date:</label>
        <input type="date" name="toDate" class="form-control form-control-sm" />
    </div>

    <div>
        <button type="submit" class="btn btn-sm btn-primary">Filter</button>
    </div>
</form>



@if (Model.Any())
{
    <table class="table mt-3">
        <thead>
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Date Added</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Category</td>
                <td>@product.DateAdded.ToShortDateString()</td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>No products found</p>
}
